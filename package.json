{
  "name": "kingdom-hall-attendant",
  "productName": "Kingdom Hall Attendant",
  "version": "1.2.1",
  "description": "Una app dedicada solo a las congregaciones",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:windows": "electron-builder --win --ia32 --x64",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/livrasand/kingdom_hall_attendant_binaries.git"
  },
  "build": {
    "appId": "com.kha.app",
    "productName": "kha",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "publish": null,
      "sign": false
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "snap",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "uninstallDisplayName": "Uninstall Kingdom Hall Attendant",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kingdom Hall Attendant"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "background": "build/icon.png",
      "contents": [
        {
          "x": 320,
          "y": 60
        },
        {
          "x": 320,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "keywords": [],
  "author": {
    "name": "Livr√§do Sandoval",
    "email": "livrasand@outlook.com",
    "url": "https://www.getkha.org/"
  },
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^30.1.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.1.6",
    "electron-updater": "^6.3.0"
  }
}
